{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "lib/components/pages/Footer.jsx",
        "lib/pages/Testimony.jsx",
        "lib/pages/Services.jsx",
        "lib/pages/Packages.jsx",
        "lib/pages/Hero.jsx",
        "lib/pages/CompanyProfile.jsx",
        "lib/components/CalltoAction.jsx",
        "lib/components/NavBar.jsx",
        "lib/components/ElectricHeading.jsx"
    ],
    "exclude": ["node_modules"]
}
